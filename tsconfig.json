{
    "compilerOptions": {
        "strict": true,
        "target": "ES2020",
        "outDir": "./dist",
        "module": "CommonJS",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "moduleResolution": "Node"
    },
    "include": ["src", "db"],
    "exclude": ["node_modules"]
}
